{
  "name": "wordpress-development",
  "version": "1.0.0",
  "author": "Hiroki Omote",
  "license": "GPL-2.0-or-later",
  "dependencies": {
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.23.6",
    "cpx": "^1.5.0",
    "css-mqpacker": "^7.0.0",
    "csswring": "^7.0.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.7.1",
    "jquery": "^3.3.1",
    "laravel-mix": "^2.1.7",
    "laravel-mix-eslint": "^0.1.1",
    "npm-run-all": "^4.1.3",
    "reset-css": "^4.0.1",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-webpack-plugin": "^0.10.5"
  },
  "scripts": {
    "copy:dev": "cpx 'src/**/*.{html,php,png,jpg,gif,svg,woff,eot,ttf,txt,md}' './public'",
    "copy:watch": "cpx 'src/**/*.{html,php,png,jpg,gif,svg,woff,eot,ttf,txt,md}' './public' --verbose --update --watch",
    "copy:production": "cpx 'src/**/*.{html,php,png,jpg,gif,svg,woff,eot,ttf,txt,md}' './dist'",
    "mix:dev": "NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "dev:watch": "NODE_ENV=development webpack --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix:production": "NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "browser:watch": "browser-sync start --config bs-config.js",
    "dev": "npm-run-all -p *:dev",
    "watch": "npm-run-all -p *:watch",
    "build": "npm-run-all *:production",
    "mysqldump": "docker exec -it docker-wordpress_wordpress_1 sh -c 'mysqldump  wordpress -h db -P 3306 -uwordpress -pwordpress 2> /dev/null' > ./install_wordpress.sql",
    "clean": "rimraf ./public",
    "prestart": "docker-compose up -d",
    "start": "npm run watch"
  }
}
